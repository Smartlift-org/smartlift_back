# SmartLift Backend Environment Variables

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/smartlift_development

# Redis Configuration  
REDIS_URL=redis://localhost:6379/0

# SMTP Email Configuration
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_DOMAIN=localhost
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_AUTHENTICATION=plain
SMTP_ENABLE_STARTTLS_AUTO=true
SMTP_OPEN_TIMEOUT=5
SMTP_READ_TIMEOUT=5
SMTP_FROM_EMAIL=noreply@smartlift.com

# Application URLs
APP_HOST=smartlift-api.com
FRONTEND_URL=http://localhost:3000

# AI Service Configuration
AI_SERVICE_HOST=localhost
AI_SERVICE_PORT=8080
AI_SERVICE_URL=http://localhost:8080
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3

# JWT Secret (use `rails secret` to generate)
SECRET_KEY_BASE=your-secret-key-here

# Rails Environment
RAILS_ENV=development
RAILS_LOG_LEVEL=debug