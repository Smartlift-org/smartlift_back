#Rails configuration
RAILS_ENV=development
RAILS_MAX_THREADS=5
RAILS_LOG_LEVEL=debug

#Server configuration
PORT=3000
WEB_CONCURENCY=1

# Database Configuration
# Number of threads for database connection pool
RAILS_MAX_THREADS=5

# Database timeouts (in milliseconds)
STATEMENT_TIMEOUT=5000
IDLE_IN_TRANSACTION_TIMEOUT=30000
DB_CONNECT_TIMEOUT=5
DB_CHECKOUT_TIMEOUT=5
DB_REAPING_FREQUENCY=10

# SSL Configuration
DB_SSL_MODE=require

# Database Credentials
# Replace these with your actual values in .env file
SMARTLIFT_API_DATABASE_PASSWORD=your_password_here

# Development Environment Specific
# Uncomment and modify these for development
# RAILS_MAX_THREADS=10
# STATEMENT_TIMEOUT=10000

# Test Environment Specific
# Uncomment and modify these for test
# RAILS_MAX_THREADS=5
# STATEMENT_TIMEOUT=5000

# Production Environment Specific
# Uncomment and modify these for production
# RAILS_MAX_THREADS=20
# STATEMENT_TIMEOUT=30000
# DB_SSL_MODE=require