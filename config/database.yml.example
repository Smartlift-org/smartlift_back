# PostgreSQL Configuration Example
# Copy this file to database.yml and configure your environment variables

default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  array: true

development:
  <<: *default
  database: smartlift_api_development
  username: <%= ENV["DATABASE_USERNAME"] %>
  password: <%= ENV["DATABASE_PASSWORD"] %>
  host: <%= ENV["DATABASE_HOST"] || "localhost" %>
  port: <%= ENV["DATABASE_PORT"] || 5432 %>

test:
  <<: *default
  database: smartlift_api_test
  username: <%= ENV["DATABASE_USERNAME"] %>
  password: <%= ENV["DATABASE_PASSWORD"] %>
  host: <%= ENV["DATABASE_HOST"] || "localhost" %>
  port: <%= ENV["DATABASE_PORT"] || 5432 %>

production:
  primary: &primary_production
    <<: *default
    database: smartlift_api_production
    username: smartlift_api
    password: <%= ENV["SMARTLIFT_API_DATABASE_PASSWORD"] %>
  cache:
    <<: *primary_production
    database: smartlift_api_production_cache
    migrations_paths: db/cache_migrate
  queue:
    <<: *primary_production
    database: smartlift_api_production_queue
    migrations_paths: db/queue_migrate
  cable:
    <<: *primary_production
    database: smartlift_api_production_cable
    migrations_paths: db/cable_migrate 